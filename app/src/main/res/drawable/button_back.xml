<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape android:shape="rectangle" android:tint="@color/purple_200">
        <solid android:color="@color/purple_200"/>
        <padding android:right="10dp" android:left="10dp" android:top="5dp"
            android:bottom="5dp"/>
    </shape>
</item>
    <item android:state_pressed="false" >
        <shape android:shape="rectangle" android:tint="@color/purple_500">
            <solid android:color="@color/purple_500"/>
            <padding android:right="10dp" android:left="10dp" android:top="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
</selector>